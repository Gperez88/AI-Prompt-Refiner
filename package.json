{
  "name": "ai-prompt-refiner",
  "displayName": "AI Prompt Refiner",
  "description": "Transform your messy prompts into clear, effective AI instructions.",
  "version": "1.3.0",
  "publisher": "Gperez88",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gperez88/AI-Prompt-Refiner"
  },
  "license": "MIT",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Programming Languages",
    "Education",
    "Snippets",
    "Testing"
  ],
  "keywords": [
    "cline",
    "claude",
    "dev",
    "mcp",
    "openrouter",
    "coding",
    "agent",
    "autonomous",
    "chatgpt",
    "sonnet",
    "ai",
    "llama"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptRefiner.refineSelection",
        "title": "%command.refineSelection.title%",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.selectModel",
        "title": "%command.selectModel.title%",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.setApiKey",
        "title": "%command.setApiKey.title%",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.selectTemplate",
        "title": "%command.selectTemplate.title%",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.createTemplate",
        "title": "%command.createTemplate.title%",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.manageTemplates",
        "title": "%command.manageTemplates.title%",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.validateOutput",
        "title": "%command.validateOutput.title%",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.exportHistory",
        "title": "%command.exportHistory.title%",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.saveAsSnippet",
        "title": "%command.saveAsSnippet.title%",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.refreshModels",
        "title": "%command.refreshModels.title%",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.showProvidersStatus",
        "title": "Show Providers Configuration Status",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.clearApiKey",
        "title": "Clear Provider API Key",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.switchProvider",
        "title": "Switch Between Configured Providers",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.showAnalytics",
        "title": "Show Role Usage Analytics",
        "category": "Prompt Refiner"
      },
      {
        "command": "promptRefiner.resetAnalytics",
        "title": "Reset Analytics Data",
        "category": "Prompt Refiner"
      }
    ],
    "keybindings": [
      {
        "command": "promptRefiner.selectModel",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prompt-refiner",
          "title": "Prompt Refiner",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "prompt-refiner": [
        {
          "type": "webview",
          "id": "promptRefiner.chatView",
          "name": "%view.chat.title%",
          "icon": "assets/icon.svg"
        },
        {
          "type": "webview",
          "id": "promptRefiner.settingsView",
          "name": "%view.settings.title%",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Prompt Refiner",
      "properties": {
        "promptRefiner.provider": {
          "type": "string",
          "enum": [
            "public",
            "mock",
            "gemini",
            "openai",
            "ollama",
            "groq",
            "huggingface"
          ],
          "default": "public",
          "description": "The AI provider (Public offers free models without keys)."
        },
        "promptRefiner.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model ID. Examples: 'gpt-4o-mini', 'llama-3.1-70b', 'claude-3-haiku'.",
          "enum": [
            "gpt-4o-mini",
            "llama-3.1-70b",
            "claude-3-haiku",
            "gemini-flash",
            "gemini-pro",
            "gpt-4o",
            "groq-llama3-70b",
            "bigscience/bloom"
          ]
        },
        "promptRefiner.ollamaEndpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Base URL for Ollama API (only used if provider is 'ollama')."
        },
        "promptRefiner.strictMode": {
          "type": "boolean",
          "default": true,
          "description": "If true, enforces strict output format without conversational filler."
        },
        "promptRefiner.useRoleTemplates": {
          "type": "boolean",
          "default": true,
          "description": "Use role-specific prompt templates when available. Each role (Programmer, Writer, Researcher, Analyst) has its own optimized template."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-templates",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "copy-templates": "node scripts/copy-templates.js",
    "build": "npm run compile && npm run package",
    "update-models": "ts-node scripts/update-models.ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.19.30",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "groq-sdk": "^0.37.0",
    "openai": "^6.17.0"
  }
}
